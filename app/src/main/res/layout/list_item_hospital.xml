<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hospitalImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_local_hospital_24"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/hospitalNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="Name of Hospital"
            android:layout_toRightOf="@+id/hospitalImageView"/>

        <TextView
            android:id="@+id/hospitalDescTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hospitalNameTextView"
            android:layout_toRightOf="@+id/hospitalImageView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:text="Description of Hospital"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>
