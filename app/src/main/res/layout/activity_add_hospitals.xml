<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#6090b4"
    tools:context=".AddHospitals">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_border"
            android:padding="24dp">

            <!-- Other views -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/primary_border"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add New Hospital"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addhospital_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/primary_border"
                    android:drawableLeft="@drawable/baseline_edit_location_24"
                    android:drawablePadding="8dp"
                    android:hint="Hospital Name"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addhospital_description"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/primary_border"
                    android:drawableLeft="@drawable/baseline_edit_location_24"
                    android:drawablePadding="8dp"
                    android:hint="Hospital Desciption"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addhospital_number"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/primary_border"
                    android:drawableLeft="@drawable/baseline_edit_location_24"
                    android:drawablePadding="8dp"
                    android:hint="Hospital Number"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addhospital_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/primary_border"
                    android:drawableLeft="@drawable/baseline_edit_location_24"
                    android:drawablePadding="8dp"
                    android:hint="Hospital Latitude"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/addhospital_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/primary_border"
                    android:drawableLeft="@drawable/baseline_edit_location_24"
                    android:drawablePadding="8dp"
                    android:hint="Hospital Longitude"
                    android:paddingStart="8dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/addhospital_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/primary_border"
                    android:scaleType="center"
                    android:src="@drawable/baseline_upload_24"
                    android:onClick="onImageClick"
                    android:contentDescription="Add Hospital Image" />

                <Button
                    android:id="@+id/addnewhospital_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/primary"
                    android:text="Add New Hospital"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>
            <!-- Other views -->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
