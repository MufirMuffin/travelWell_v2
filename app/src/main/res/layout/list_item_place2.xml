<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/placeImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dutch_square"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/placeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:text="Name of Place"
            android:layout_toRightOf="@+id/placeImageView"/>

        <TextView
            android:id="@+id/placeDescTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeNameTextView"
            android:layout_toRightOf="@+id/placeImageView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Description of Place"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/placeDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeDescTextView"
            android:layout_toRightOf="@+id/placeImageView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Distance of Place (KM) "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totalRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_star_24"
            android:layout_below="@+id/placeDistanceTextView"
            android:layout_toRightOf="@+id/placeImageView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="No Rating Yet"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </RelativeLayout>
</LinearLayout>
