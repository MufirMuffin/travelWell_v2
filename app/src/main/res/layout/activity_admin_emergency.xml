<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AdminEmergency"
    android:background="@drawable/background_3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Services"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Police Station"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <ListView
        android:id="@+id/policeStationListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:paddingTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <ListView
        android:id="@+id/hospitalListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:paddingTop="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/addPoliceButton"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Add New Police Service"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:elevation="2dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/addHospitalButton"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Add New Hospital Service"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:elevation="2dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAllCaps="false"
            />

    </LinearLayout>


</LinearLayout>
